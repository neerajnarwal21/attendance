<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/signin_red</item>
        <item name="colorPrimaryDark">@color/signin_red</item>
        <item name="colorAccent">@color/signin_red</item>
    </style>

    <style name="LSTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/White_semi_trans</item>
        <item name="colorControlActivated">@color/White</item>
        <item name="android:windowBackground">@drawable/image</item>
    </style>

    <style name="SplashActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@color/transparent</item>
        <item name="android:windowBackground">@drawable/image</item>
    </style>

</resources>
